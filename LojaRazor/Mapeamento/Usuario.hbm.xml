<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="LojaRazor"
                   namespace="LojaRazor.Models"                   
                   >

  <class name="Usuario">
    <id name="Id">
      <generator class="identity"></generator>
    </id>
    <property name="Nome"/>
    <property name="Sexo"/>
    <property name="Email"/>
    <property name="Senha"/>
    <property name="DataDeNascimento"/>
    <property name="Endereco"/>
    <property name="Estado"/>
    <property name="Complemento"/>
    <property name="CEP"/>
    <property name="Observacoes"/>
    <property name="RecebePromocoes"/>
  </class>
</hibernate-mapping>